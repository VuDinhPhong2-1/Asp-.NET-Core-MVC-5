@model BanHangOnline.Models.Order

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />
            <input type="hidden" asp-for="CustomerId" />
            <input type="hidden" asp-for="OrderDate" />
            <input type="hidden" asp-for="Deleted" />
            <input type="hidden" asp-for="Paid" />
            <input type="hidden" asp-for="TotalMoney" />
            <input type="hidden" asp-for="Note" />
            <input type="hidden" asp-for="Address" />
            <input type="hidden" asp-for="Shipper.ShipperId" />
            <div class="form-group">
                <label asp-for="TransactStatusId" class="control-label"></label>
                <select asp-for="TransactStatusId" class="form-control" asp-items="ViewBag.TransactStatusId"></select>
                <span asp-validation-for="TransactStatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

